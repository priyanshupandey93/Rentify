<% layout('/layouts/boilerplate') -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WanderLust</title>
</head>
<body>
    <div class="row mb-3">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Create a New Listing</h3>
    <form action="/listings" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input id="title" type="text" name="listing[title]" placeholder="add an entrancing title" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="listing[description]" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input id="image" type="text" name="listing[image.url]" placeholder="enter image URL/Link" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input id="price" type="number" name="listing[price]" placeholder="1500" class="form-control">
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input id="country" type="text" name="listing[country]" placeholder="India" class="form-control">
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input id="location" type="text" name="listing[location]" placeholder="Lucknow, Uttar Pradesh" class="form-control">
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
        </div>
    </div>
</body>
</html>